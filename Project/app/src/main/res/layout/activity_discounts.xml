<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discounts">

    <Button
        android:id="@+id/Whataburger"
        android:layout_width="395dp"
        android:layout_height="42dp"
        android:layout_marginTop="120dp"
        android:text="Whataburger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Pizzahut"
        android:layout_width="395dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="Pizzahut"
        app:layout_constraintTop_toBottomOf="@+id/Whataburger"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/Subway"
        android:layout_width="395dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="Subway"
        app:layout_constraintTop_toBottomOf="@+id/Pizzahut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/Wingstop"
        android:layout_width="395dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="Wingstop"
        app:layout_constraintTop_toBottomOf="@+id/Subway"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/Starbucks"
        android:layout_width="395dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="Starbucks"
        app:layout_constraintTop_toBottomOf="@+id/Wingstop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/house"
        android:layout_width="395dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>